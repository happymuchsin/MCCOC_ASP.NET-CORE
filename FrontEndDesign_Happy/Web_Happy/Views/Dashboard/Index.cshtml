        <script>
            function selectItem(serieses) {
                if (serieses == "series2") {
                    am4core.useTheme(am4themes_animated);

                    var chart = am4core.create("itemdiv", am4charts.PieChart3D);
                    chart.hiddenState.properties.opacity = 0;

                    chart.legend = new am4charts.Legend();

                    chart.dataSource.url = "/Dashboard/LoadItem";
                    chart.dataSource.parser = new am4core.JSONParser();

                    chart.innerRadius = 100;
                    var series2 = chart.series.push(new am4charts.PieSeries3D());
                    series2.dataFields.value = "stock";
                    series2.dataFields.category = "name";

                    chart.exporting.menu = new am4core.ExportMenu();
                    chart.exporting.menu.items = [
                        {
                            "label": "...",
                            "menu": [
                                { "type": "xlsx", "label": "Excel" }
                            ]
                        }
                    ];
                }
                else {
                    am4core.useTheme(am4themes_animated);

                    var chart = am4core.create("itemdiv", am4charts.PieChart3D);
                    chart.hiddenState.properties.opacity = 0;

                    chart.legend = new am4charts.Legend();

                    chart.dataSource.url = "/Dashboard/LoadItem";
                    chart.dataSource.parser = new am4core.JSONParser();

                    chart.innerRadius = 100;
                    var series1 = chart.series.push(new am4charts.PieSeries3D());
                    series1.dataFields.value = "price";
                    series1.dataFields.category = "name";

                    chart.exporting.menu = new am4core.ExportMenu();
                    chart.exporting.menu.items = [
                        {
                            "label": "...",
                            "menu": [
                                { "type": "xlsx", "label": "Excel" }
                            ]
                        }
                    ];
                }
            }

            function selectReceipt(serieses) {
                if (serieses == "series2") {
                    am4core.useTheme(am4themes_animated);

                    var chart = am4core.create("receiptdiv", am4charts.PieChart3D);
                    chart.hiddenState.properties.opacity = 0;

                    chart.legend = new am4charts.Legend();

                    chart.dataSource.url = "/Dashboard/LoadReceipt";
                    chart.dataSource.parser = new am4core.JSONParser();

                    chart.innerRadius = 100;
                    var series2 = chart.series.push(new am4charts.PieSeries3D());
                    series2.dataFields.value = "quantity";
                    series2.dataFields.category = "itemName";

                    chart.exporting.menu = new am4core.ExportMenu();
                    chart.exporting.menu.items = [
                        {
                            "label": "...",
                            "menu": [
                                { "type": "xlsx", "label": "Excel" }
                            ]
                        }
                    ];
                }
                else {
                    am4core.useTheme(am4themes_animated);

                    var chart = am4core.create("receiptdiv", am4charts.PieChart3D);
                    chart.hiddenState.properties.opacity = 0;

                    chart.legend = new am4charts.Legend();

                    chart.dataSource.url = "/Dashboard/LoadReceipt";
                    chart.dataSource.parser = new am4core.JSONParser();

                    chart.innerRadius = 100;
                    var series1 = chart.series.push(new am4charts.PieSeries3D());
                    series1.dataFields.value = "totalPrice";
                    series1.dataFields.category = "itemName";

                    chart.exporting.menu = new am4core.ExportMenu();
                    chart.exporting.menu.items = [
                        {
                            "label": "...",
                            "menu": [
                                { "type": "xlsx", "label": "Excel" }
                            ]
                        }
                    ];
                }
            }


